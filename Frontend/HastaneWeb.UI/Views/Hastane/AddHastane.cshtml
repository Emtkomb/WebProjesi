@model CreateHastaneDto
@{
    ViewData["Title"] = "AddHastane";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
        <label>Hastane Adı</label>
        <input type="text" asp-for="HastaneAdi" class="form-control" />
        <span asp-validation-for="HastaneAdi" class="text-danger"></span>
        <br />
        <label>Hastane Adresi</label>
        <input type="text" asp-for="HastaneAdresi" class="form-control" />
        <span asp-validation-for="HastaneAdresi" class="text-danger"></span>
        <br />
        <label>Hastane Telefonu</label>
        <input type="text" asp-for="HastaneTelefon" class="form-control" />
        <span asp-validation-for="HastaneTelefon" class="text-danger"></span>       
        <br />
        <label>Hastane Resim</label>
        <input type="text" asp-for="HastaneResim" class="form-control" />
        <span asp-validation-for="HastaneResim" class="text-danger"></span>
        <br />
        <button class="btn btn-primary">Hastane Ekle</button>
</form>

