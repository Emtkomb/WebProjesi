@using HastaneWeb.EntityLayer.Concrete;
@model Birim
@{
    ViewData["Title"] = "AddBirim";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
        <label>Birim Adı</label>
        <input type="text" asp-for="Name" class="form-control" />
        <span  asp-validation-for="Name" class="text-danger"></span>
        <br />
    <label>Birimi</label>

    <select asp-for="HastaneID" class="form-control" asp-items="ViewBag.Hastaneler"></select>
    <span asp-validation-for="HastaneID" class="text-danger"></span>

        <button class="btn btn-primary">Birim Ekle</button>
</form>

