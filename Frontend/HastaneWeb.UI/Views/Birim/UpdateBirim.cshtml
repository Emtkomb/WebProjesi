@using HastaneWeb.EntityLayer.Concrete;
@model Birim
@{
    ViewData["Title"] = "UpdateBirim";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}
<form method="post">
        <input type="hidden" asp-for="BirimID" />
        <label>Birim Adı</label>
        <input type="text" asp-for="Name" class="form-control" />
        <span  asp-validation-for="Name" class="text-info"></span>
        <br />
    <label>Hastane Adı</label>
    <select asp-for="HastaneID" class="form-control" asp-items="ViewBag.HastaneID"></select>
    <span asp-validation-for="HastaneID" class="text-danger"></span>

        <button class="btn btn-primary">Birim Güncelle</button>
</form>
